datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model user {
    id          Int     @id @default(autoincrement())
    username    String  @unique
    email       String  @unique
    password    String
    token       String
    is_Verified Boolean
}

model File {
    id          Int        @id @default(autoincrement())
    userId      Int
    filename    String
    createdAt   DateTime   @default(now())
}
