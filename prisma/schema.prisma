datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id          Int          @id @default(autoincrement())
    username    String       @unique
    email       String       @unique
    password    String
    token       String
    is_Verified Boolean
    userRole    UserRole
    profile     UserProfile? @relation("UserProfileUser")
    profileId   Int?
    classrooms  Classroom[]  @relation("StudentClassrooms")
}

model UserProfile {
    id             Int    @id @default(autoincrement())
    fullName       String
    age            Int
    gender         String
    profession     String
    universityName String
    contactNumber  String
    address        String
    role           String
    user           User   @relation("UserProfileUser", fields: [userId], references: [id])
    userId         Int    @unique
}

model File {
    id        Int      @id @default(autoincrement())
    userId    Int
    filename  String
    createdAt DateTime @default(now())
}

model Classroom {
    id            Int    @id @default(autoincrement())
    classname     String
    classroomId   String @unique
    teachername   String @unique
    students      User[] @relation("StudentClassrooms")
    classStrength Int    @default(0)
}

enum UserRole {
    STUDENT
    TEACHER
    ADMIN
}
